{% block title %}Registro de Coche{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Registro de Coche</h1>
        
        {#  Comprueba si la variable 'form' está definida #}
        {% if form is defined %}
            {#  Inicia el formulario #}
            {{ form_start(form) }}
        
            {#  Muestra los campos del formulario #}
                <div class="form-group">
                    {{ form_label(form.Matricula, 'Matrícula del Coche', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.Matricula, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.Matricula) }}
                    </div>
                </div>
            
            {#  Muestra el botón de envío #}
            <button type="submit" class="btn btn-primary mt-3">Guardar Coche</button>
            
            {#  Finaliza el formulario #}
            {{ form_end(form) }}
        {% else %}
             <p>El formulario no está definido. Asegúrate de que se pasa desde el controlador.</p>
        {% endif %}
    </div>
{% endblock %}
