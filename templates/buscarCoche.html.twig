<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Buscar Coche</title>
    <style>
        body {
            font-family: sans-serif;
            margin: 50px;
        }
        .contenedor {
            width: 400px;
            margin: 0 auto;
            border: 2px solid green;
            padding: 20px;
            border-radius: 10px;
        }
        .btn {
            background-color: green;
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-danger {
            background-color: darkgreen;
        }
    </style>
</head>
<body>
    <div class="contenedor">
        <h3 style="color: green;">Introduce matrícula para buscar</h3>

        {{ form_start(formulario) }}
            <div style="margin-bottom: 15px;">
                {{ form_widget(formulario.matricula, { 'attr': {'placeholder': 'Ej: 1234ABC'} }) }}
            </div>
            <div style="text-align: right;">
                <button type="submit" class="btn">Buscar</button>
            </div>
        {{ form_end(formulario) }}

        {% if coche is defined and coche %}
            <div style="margin-top: 30px; padding: 10px; border: 1px solid green;">
                <p><strong>Matrícula:</strong> {{ coche.matricula }}</p>
                <p><strong>Modelo:</strong> {{ coche.nombre }}</p>

                <form method="post" action="{{ path('sacar_coche', { id: coche.id }) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('sacar' ~ coche.id) }}">
                    <button class="btn btn-danger" style="margin-top: 10px;">Sacar coche</button>
                </form>
            </div>
        {% elseif formulario is defined and formulario.vars.submitted %}
            <p style="color: red; margin-top: 20px;">No se encontró ningún coche con esa matrícula.</p>
        {% endif %}
    </div>
</body>
</html>
